<h1>Login</h1>

<%= form_tag sessions_path do %>
  <%= ie { label_tag :email, "E-Mail" } %>
  <%= email_field_tag :email, params[:email], :placeholder => "E-Mail" %>
  <%= ie { label_tag :password, "Passwort" } %>
  <%= password_field_tag :password, params[:password], :placeholder => "Passwort" %>
  <%= ie { raw '<br />' } %>
  <%= submit_tag "Login" %><br />
  <%= link_to "Passwort vergessen?", new_password_reset_path %>
<% end %>